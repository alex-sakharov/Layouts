<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lexa.layouts">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".VerticalLinearLayoutActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".RandomGeneratorService"
            android:exported="false">

            <!-- android:process=".RandomGeneratorServiceProcess" -->
        </service>

        <activity android:name=".ConstraintLayoutActivity" />
        <activity
            android:name=".HorizontalLinearActivity"
            android:label="@string/title_activity_horizontal_linear" />
        <activity android:name=".RelativeLayoutActivity"></activity>
    </application>

</manifest>